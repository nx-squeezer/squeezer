{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "useDaemonProcess": false,
        "canTrackAnalytics": false,
        "showUsageWarnings": true,
        "cacheableOperations": ["build", "lint", "test", "docs", "e2e"],
        "accessToken": "ZWYyZDY4MDctMzIwYy00NGU2LTg3YmQtNTM2ZjU3OGFiOTRmfHJlYWQ="
      }
    }
  },
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "affected": {
    "defaultBase": "main"
  },
  "namedInputs": {
    "ci": ["{workspaceRoot}/.github/workflows/*.yml"],
    "codecov": ["{workspaceRoot}/.codecov.yml"],
    "default": ["ci", "codecov"]
  },
  "targetDefaults": {
    "@nx/js:tsc": {
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "./{projectRoot}/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./{projectRoot}/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./{projectRoot}",
            "glob": "*.json",
            "ignore": ["tsconfig*.json", "project.json", ".eslintrc.json"],
            "output": "."
          }
        ]
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "@nx/js:swc": {
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "./{projectRoot}/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./{projectRoot}/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./{projectRoot}",
            "glob": "*.json",
            "ignore": ["tsconfig*.json", "project.json", ".eslintrc.json"],
            "output": "."
          }
        ]
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "@nx/linter:eslint": {
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,js,json,html}", "{projectRoot}/package.json"]
      }
    },
    "@nx/jest:jest": {
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "codeCoverage": true,
        "coverageDirectory": "{workspaceRoot}/coverage/{projectRoot}",
        "coverageReporters": ["lcov", "html"]
      },
      "configurations": {
        "watch": {
          "watch": true
        },
        "ci": {
          "ci": true
        }
      }
    },
    "@nx/cypress:cypress": {
      "options": {
        "cypressConfig": "{projectRoot}/cypress.config.ts",
        "testingType": "e2e"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "@nx/plugin:e2e": {
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "@jscutlery/semver:version": {
      "options": {
        "push": true,
        "preset": "conventional",
        "trackDeps": true,
        "tagPrefix": "{projectName}@",
        "commitMessageFormat": "chore({projectName}): :package: release version ${version} [skip ci]"
      }
    },
    "@jscutlery/semver:github": {
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "ngx-deploy-npm:deploy": {
      "options": {
        "access": "public"
      }
    },
    "@enio.ai/typedoc:typedoc": {
      "outputs": ["{workspaceRoot}/docs/{projectRoot}"],
      "options": {
        "options": "typedoc.config.js"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "generators": {
    "@nx/js:library": {
      "buildable": true,
      "publishable": true
    },
    "@nx/angular:application": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "none"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "buildable": true,
      "publishable": true
    },
    "@nx/angular:component": {
      "style": "css"
    }
  }
}
