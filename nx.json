{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "nx-squeezer",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "useDaemonProcess": false,
        "canTrackAnalytics": false,
        "showUsageWarnings": true,
        "cacheableOperations": ["build", "lint", "test", "e2e"],
        "accessToken": "ZWYyZDY4MDctMzIwYy00NGU2LTg3YmQtNTM2ZjU3OGFiOTRmfHJlYWQ="
      }
    }
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".github/workflows/*.yml": "*",
    ".codecov.yml": "*"
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ]
  },
  "targetDefaults": {
    "@nrwl/linter:eslint": {
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/**/*.{ts,js,html}",
          "{projectRoot}/generators.json",
          "{projectRoot}/executors.json",
          "{projectRoot}/package.json",
          "{projectRoot}/migrations.json"
        ]
      }
    },
    "@nrwl/jest:jest": {
      "outputs": ["coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "codeCoverage": true,
        "coverageDirectory": "../../coverage/{projectRoot}",
        "coverageReporters": ["lcov", "html"],
        "coverageThreshold": {
          "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
          }
        }
      },
      "configurations": {
        "watch": {
          "watch": true
        },
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nrwl/cypress:cypress": {
      "options": {
        "cypressConfig": "{projectRoot}/cypress.config.ts",
        "testingType": "e2e"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "@nrwl/nx-plugin:e2e": {
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "@jscutlery/semver:version": {
      "options": {
        "push": true,
        "preset": "conventional",
        "trackDeps": true,
        "tagPrefix": "${projectName}@",
        "commitMessageFormat": "chore(${projectName}): :package: release version ${version} [skip ci]"
      }
    },
    "@jscutlery/semver:github": {
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "ngx-deploy-npm:deploy": {
      "options": {
        "access": "public"
      }
    }
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  },
  "generators": {
    "@nrwl/js:library": {
      "buildable": true,
      "publishable": true
    },
    "@nrwl/angular:application": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "none"
    },
    "@nrwl/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "buildable": true,
      "publishable": true
    },
    "@nrwl/angular:component": {
      "style": "css"
    }
  }
}
