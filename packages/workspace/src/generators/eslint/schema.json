{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "eslint",
  "title": "Configures ESLint with additional rules",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "eslintRecommended": {
      "type": "boolean",
      "description": "Applies eslint:recommended",
      "default": true,
      "x-prompt": "Do you want to apply eslint:recommended rules?"
    },
    "sonarJs": {
      "type": "boolean",
      "description": "Applies sonarjs:recommended",
      "default": true,
      "x-prompt": "Do you want to apply sonarjs:recommended rules?"
    }
  }
}
