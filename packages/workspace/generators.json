{
  "$schema": "http://json-schema.org/schema",
  "name": "workspace",
  "version": "0.0.1",
  "generators": {
    "workspace": {
      "factory": "./src/generators/workspace/generator",
      "schema": "./src/generators/workspace/schema.json",
      "description": "workspace generator"
    },
    "prettier": {
      "factory": "./src/generators/prettier/generator",
      "schema": "./src/generators/prettier/schema.json",
      "description": "Configure Prettier"
    },
    "tsconfig": {
      "factory": "./src/generators/tsconfig/generator",
      "schema": "./src/generators/tsconfig/schema.json",
      "description": "Configures tsconfig.base.json"
    },
    "github-workflow": {
      "factory": "./src/generators/github-workflow/generator",
      "schema": "./src/generators/github-workflow/schema.json",
      "description": "Configures GitHub CI Workflow"
    },
    "eslint": {
      "factory": "./src/generators/eslint/generator",
      "schema": "./src/generators/eslint/schema.json",
      "description": "Configures ESLint with additional rules"
    },
    "codecov": {
      "factory": "./src/generators/codecov/generator",
      "schema": "./src/generators/codecov/schema.json",
      "description": "Configures Codecov"
    }
  }
}
