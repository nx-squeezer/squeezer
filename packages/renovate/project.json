{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/renovate/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/renovate",
        "main": "packages/renovate/index.js",
        "tsConfig": "packages/renovate/tsconfig.lib.json",
        "assets": [
          "packages/renovate/*.md",
          {
            "input": "./packages/renovate/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/renovate/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/renovate",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/renovate",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./packages/renovate",
            "glob": "index.js",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/renovate/**/*.ts",
          "packages/renovate/generators.json",
          "packages/renovate/executors.json",
          "packages/renovate/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/renovate"],
      "options": {
        "jestConfig": "packages/renovate/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      }
    }
  },
  "tags": []
}
